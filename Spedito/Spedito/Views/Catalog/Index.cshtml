@model FoodCatalogListViewModel  
@{
    ViewData["Title"] = "Catalog";
}

<main class="page-main">
    <div class="section-first-screen">
        <div class="first-screen__bg"></div>
        <div class="first-screen__content">
            <div class="uk-container">
                
                <vc:banner></vc:banner>

                <div class="first-screen__box">
                    <h2 style="text-transform:uppercase" class="first-screen__title">@Model.FoodCatalog.Name</h2>
                    <p class="first-screen__desc">Delicious & Tasty Pizzas By Expert Chefs</p>
                    <div class="first-screen__breadcrumb">
                        <ul class="uk-breadcrumb">
                            <li><a asp-controller="home" asp-action="index">HOME</a></li>
                            <li><span style="text-transform:uppercase">@Model.FoodCatalog.Name</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-content" style="margin-top: 150px">
        <div class="uk-container">
            <div data-uk-filter="target: .js-filter">
                <ul class="uk-slider-items uk-grid uk-grid-small uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l" data-uk-grid>
                    @foreach (var item in Model.Products)
                    {
                        <li class="uk-first-column" style="width:25%; display:inline">
                            <div class="product-item">
                                <div class="product-item__box">

                                    <partial name="Components/Product/_SingleProduct" model="item" />

                                </div>
                            </div>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </div>
</main>