@model IEnumerable<ProductViewModel>

    <div class="uk-margin-medium-top @(Model.Count()==0?"d-none":"")" data-uk-slider>
        <div class="uk-position-relative">
            <div class="uk-slider-container">
                <ul class="uk-slider-items uk-grid uk-grid-medium uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-3@xl uk-child-width-1-3@xl" data-uk-height-match=".product-card__intro">
                    @foreach (var item in Model)
                    {
                        <li>
                            <div class="product-card">
                                <div class="product-card__media">
                                    <a asp-controller="products" asp-action="index" asp-route-id="@item.Id">
                                        <img class="uk-width-1-1" src="uploads/@item.Photos.First()" alt="@item.Name" />
                                    </a>
                                </div>
                                <div class="product-card__body">
                                    <div class="product-card__title">
                                        <a asp-controller="products" asp-action="index" asp-route-id="@item.Id">@item.Name</a>
                                    </div>
                                    <div class="product-card__intro">
                                        <p>@item.Description</p>
                                    </div>
                                    <div class="product-card__price"> 
                                        <span>Price: </span>
                                        <span class="value">$@item.Price</span>
                                    </div>
                                    <div class="product-card__addcart"> 
                                        <a class="uk-button uk-button-default uk-width-1-1" href="https://pro-theme.com/html/spedito/page-product.html">Add to Cart
                                            <span data-uk-icon="cart"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <div class="uk-visible@l"><a class="uk-position-top-left-out" href="#" data-uk-slidenav-previous data-uk-slider-item="previous"></a><a class="uk-position-top-right-out" href="#" data-uk-slidenav-next data-uk-slider-item="next"></a></div>
            <div>
                <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin-medium-top"></ul>
            </div>
        </div>
    </div>