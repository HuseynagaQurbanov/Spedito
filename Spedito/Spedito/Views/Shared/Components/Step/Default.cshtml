@model IEnumerable<StepViewModel>

<ul class="uk-slider-items uk-grid uk-grid-medium uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-3@l uk-child-width-1-4@xl">
    @foreach (var item in Model)
    {
        <li>
            <div class="step-item step-item--1">
                <div class="step-item__icon">
                    <img src="/uploads/@item.Image" alt="img-step">
                </div>
                <div class="step-item__numb">Step @item.Steps</div>
                <div class="step-item__title">@item.Title</div>
                <div class="step-item__desc">@item.Description</div>
            </div>
        </li>
    }
</ul>